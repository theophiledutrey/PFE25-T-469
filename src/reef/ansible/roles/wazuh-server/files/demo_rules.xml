<group name="demo,">
  <!-- Example: Override an existing rule (e.g., SSH failure) to Critical Level 15 -->
  <!-- Assuming rule 5716 is SSH authentication failed -->
  <rule id="100001" level="15">
    <if_sid>5716</if_sid>
    <description>DEMO: Critical SSH Authentication Failure detected!</description>
    <group>authentication_failed,pci_dss_10.2.4,</group>
  </rule>

  <!-- Example: Custom trigger for a specific file access -->
  <rule id="100002" level="12">
    <if_group>syscheck</if_group>
    <match>/etc/passwd</match>
    <description>DEMO: Critical Alert - /etc/passwd was modified!</description>
  </rule>
</group>